<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net4.6.2;netstandard2.0;net6.0;net8.0</TargetFrameworks>
        <RootNamespace>LangChain.Databases</RootNamespace>
        <NoWarn>$(NoWarn);CA1819;CS3007</NoWarn>
    </PropertyGroup>

    <PropertyGroup Label="NuGet">
        <Description>LangChain Databases abstractions.</Description>
        <PackageTags>$(PackageTags);abstractions</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.PublicApiAnalyzers">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

</Project>
